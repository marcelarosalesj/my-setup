" general
let mapleader = ","
nmap <leader>w :w!<cr>

set wildmenu
set ruler
set cmdheight=2
" configure backspace
set backspace=eol,start,indent
set whichwrap+=<,>,h,l
" about search
set ignorecase
set smartcase
set hlsearch
set incsearch 
" for regex
set magic
"code
set showmatch 

" tabs
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
